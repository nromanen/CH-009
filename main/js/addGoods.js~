var App = App || {};

(function () {

	App.Views.AddGoods= Backbone.View.extend({
		el: '#addGoods',
		tagName: 'addGoods',
		events: {
			'keypress input': 'inputKeypress',
		},
		inputKeypress: function(e) {
			if (e.which === 13) {
				this.validateItem();
			}
		},
		validateItem: function () {
		
			var strUnit = $('#goods').val().trim(); 	
			
			if ( strUnit === "" ) {
				alert ( 'Пожалуйста, введите имя Товара!' );
				$('#goods').val('');
				$('#goods').focus();
				return false;
			}
			
			this.addItem ( strUnit );
		
		},
		addItem: function( strUnit ) {
			
			var newGoodsCollection = new App.Collections.UnitItems([
				{
					unitID: 1,
					material: 'empty',
					count: 0	
				}
			]);
			
			var modelGoods = new App.Models.Unit ({
				
				name: strGoods,
				goodsCollection: newUnitCollection
				
			});
			
			App.Events.trigger( 'addGoods', modelUnit );
			
			$('.goods .good').each( function () {
				
				$(this).find('.good_info').toggle();
				
			});
			
			this.clearTextBoxes();
		},
		clearTextBoxes: function() {
			$('#goods').val('');
			$('#goods').focus();
		}
	});

}());